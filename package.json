{
  "name": "webcompat-metrics-client",
  "version": "0.1.0",
  "description": "An application to power metrics for webcompat.com",
  "license": "MPL-2.0",
  "private": true,
  "author": "webcompat",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webcompat/webcompat-metrics-client.git"
  },
  "bugs": {
    "url": "https://github.com/webcompat/webcompat-metrics-client/issues"
  },
  "homepage": "https://github.com/webcompat/webcompat-metrics-client#readme",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "build": "npm run clean && webpack --env.NODE_ENV=production --progress --colors",
    "clean": "shx rm -rf build && shx mkdir build",
    "lint": "npm run lint:JS && npm run lint:CSS",
    "lint:JS": "eslint ./webpack.config.js ./src ./scripts",
    "lint:CSS": "stylelint './src/**/*.css'",
    "fix": "npm run lint:fix:JS && npm run lint:fix:CSS",
    "lint:fix:JS": "npm run lint:JS -- --fix",
    "lint:fix:CSS": "npm run lint:CSS -- --fix",
    "start:dev": "webpack-dev-server --env.NODE_ENV=development --progress --colors",
    "test": "npm run lint && npm run test:jest",
    "test:jest": "jest --runInBand --coverage",
    "test:watch": "npm run test:jest -- --watch"
  },
  "dependencies": {
    "chart.js": "^2.7.2",
    "dayjs": "^1.7.4",
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-chartjs-2": "^2.7.4",
    "react-dom": "^16.4.1",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "react-svg-inline": "^2.1.1",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "simple-json-fetch": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-transform-spread": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^9.0.0",
    "babel-loader": "^8.0.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.13",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^1.0.0",
    "enzyme": "^3.5.1",
    "enzyme-adapter-react-16": "^1.4.0",
    "eslint": "^5.1.0",
    "eslint-config-i-am-meticulous": "^11.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.10.0",
    "favicons-webpack-plugin": "0.0.9",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "imports-loader": "^0.8.0",
    "jest": "^22.4.2",
    "jest-fetch-mock": "^1.6.5",
    "postcss": "^7.0.0",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^12.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-reporter": "^6.0.0",
    "prettier": "^1.13.7",
    "raw-loader": "^0.5.1",
    "react-test-renderer": "^16.4.1",
    "redux-devtools-extension": "^2.13.5",
    "shx": "^0.3.2",
    "sinon": "^6.1.3",
    "style-loader": "^0.23.0",
    "stylelint": "^9.3.0",
    "stylelint-config-standard": "^18.2.0",
    "webpack": "^4.16.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.0"
  },
  "babel": {
    "env": {
      "development": {
        "presets": [
          "@babel/preset-react",
          "@babel/preset-env"
        ],
        "plugins": [
          "@babel/plugin-transform-spread"
        ]
      },
      "test": {
        "presets": [
          "@babel/preset-react",
          "@babel/preset-env"
        ],
        "plugins": [
          "@babel/plugin-transform-spread"
        ]
      },
      "production": {
        "presets": [
          "@babel/preset-react",
          "@babel/preset-env"
        ],
        "plugins": [
          [
            "babel-plugin-transform-react-remove-prop-types",
            {
              "mode": "wrap"
            }
          ],
          "@babel/plugin-transform-spread"
        ]
      }
    }
  },
  "jest": {
    "verbose": true,
    "notify": true,
    "coverageThreshold": {
      "global": {
        "statements": 70,
        "branches": 70,
        "functions": 70,
        "lines": 70
      }
    },
    "moduleNameMapper": {
      "\\.(svg)$": "<rootDir>/scripts/__mocks__/fileMock.js",
      "\\.(css)$": "identity-obj-proxy"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/public/",
      "<rootDir>/scripts/"
    ],
    "setupFiles": [
      "<rootDir>/scripts/test-setup.js"
    ],
    "testURL": "http://localhost:3001/?from=2018-04-25&to=2018-05-25"
  }
}
